extends loginSignup

block content2
    script.
        document.addEventListener("DOMContentLoaded", function(e) { 
            const signupTab = document.querySelector("#tab-signup");
            const loginTab = document.querySelector("#tab-login");
            
            signupTab.style.background = "white";
            loginTab.style.background = "rgb(228, 228, 228)"
        })
    form#signupForm.forms(action='/user/signUp' method='POST' enctype='multipart/form-data')
        .form-row
        label First Name: 
        input(type='text' name='fname' required='')
        .form-row
        label Last Name: 
        input(type='text' name='lname' required='')
        .form-row
        label Email: 
        input(type='text' name='email' required='')
        .form-row
        label Password: 
        input(type='password' name='pw1' required='')
        .form-row
        label Repeat Password: 
        input(type='password' name='pw2' required='')
        input(type='submit' value='Submit!')
    